# Variables de entorno para el proyecto
# Copia este archivo a .env y actualiza los valores

# MongoDB Configuration
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=example_change_this_in_production

# JWT Configuration
JWT_SECRET=your_secret_key_change_this_in_production_use_long_random_string

# Kafka Configuration (opcional)
KAFKA_BROKER=kafka:9092

# Topics de Kafka (opcional)
VEHICLE_TOPIC=vehicle-events
ROUTE_TOPIC=route-events
DRIVER_TOPIC=driver-events
FUEL_TOPIC=fuel-consumption-events
AUTH_TOPIC=auth-events

# Service Hosts (para desarrollo local, cambiar si es necesario)
DB_HOST=mongodb
VEHICLE_SERVICE_HOST=vehicle-service:50052
ROUTE_SERVICE_HOST=route-service:50053
FUEL_SERVICE_HOST=fuel-service:50054
DRIVER_SERVICE_HOST=driver-service:50055

# Service Ports
AUTH_SERVICE_PORT=50051
VEHICLE_SERVICE_PORT=50052
ROUTE_SERVICE_PORT=50053
FUEL_SERVICE_PORT=50054
DRIVER_SERVICE_PORT=50055
API_GATEWAY_PORT=8000

# Database Names
AUTH_DB_NAME=auth_service
VEHICLE_DB_NAME=vehicle_service
ROUTE_DB_NAME=route_service
FUEL_DB_NAME=fuel_service
DRIVER_DB_NAME=driver_service

# Environment
ENVIRONMENT=development
# ENVIRONMENT=staging
# ENVIRONMENT=production

# Logging Level
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG
# LOG_LEVEL=WARNING
# LOG_LEVEL=ERROR

# CORS (para API Gateway)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting (opcional)
RATE_LIMIT_PER_MINUTE=60
